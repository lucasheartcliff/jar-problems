{
  "include": [
    "./src/*",
    "**/*.ts"
  ],
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "cypress",
      "node"
    ]
  }
}
